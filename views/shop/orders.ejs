  <body>
 <%- include('../includes/navigation') %> 

    <main>
      <% if (!orders || orders.length === 0) { %>
       <h1>Nothing there!</h1>
        <% } else  { %>
         <ul>
          <% for( let order of orders ) { %>
            <li>
              <h1><%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a></h1>
              <ul>
                <% for( let item of order["products"]) { %>
                  <li>
                    <%= item.product.title %> (<%= item.quantity %>)
                  </li>
                <% } %>
              </ul>
            </li>
          <% } %>
         </ul>
      <% } %>
    </main>

